{
  "compilerOptions": {
    "moduleResolution": "node", 
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "dist",
    "downlevelIteration": true,
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ],
  "javascript.validate.enable": true
}
