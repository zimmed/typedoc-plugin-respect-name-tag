{
  "compilerOptions": {
    "moduleResolution": "node", 
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": ".",
    "sourceMap": true,
    "experimentalDecorators": true, 
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": ".",
    "downlevelIteration": true,
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "plugin.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "javascript.validate.enable": true
}
